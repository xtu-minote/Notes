<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 当按钮被按下时显示的图片 -->
    <item android:state_pressed="true"
        android:drawable="@drawable/new_note_pressed" />
    <!-- 默认状态下的图片 -->
    <item
        android:drawable="@drawable/new_note_normal" />
</selector>
